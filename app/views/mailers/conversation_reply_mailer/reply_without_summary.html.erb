<% @messages.each do |message| %>
  <p class="message-bubble" style="text-align: start; unicode-bidi: plaintext; padding: 10px 20px; margin: 5px 0 20px 0; background: #efefef; border-radius: 10px; display: inline-table;">
    <% if message.content %>
      <%= message.content.gsub("\n", "<br/>").html_safe %>
    <% end %>
    <% if message.attachments %>
      <% message.attachments.each do |attachment| %>
        attachment [<a href="<%= attachment.file_url %>" _target="blank">click here to view</a>]
      <% end %>
    <% end %>
  </p>
<% end %>
